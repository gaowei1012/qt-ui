{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "DOM"],
    "allowJs": true,
    
    // "declaration": true, // 生成 .d.ts 文件
    // "declarationMap": false,
    "baseUrl": ".",
    "outDir": "./lib",
    "downlevelIteration": true,
    "sourceMap": true,
    "jsx": "react-jsx"
  },
  "awesomeTypescriptLoaderOptions": {
    "useTranspileModule": true
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules"]
}
